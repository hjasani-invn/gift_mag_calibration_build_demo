all: mkdir  $(OBJECTS)
	$(CXX) $(ARCH) $(PIC) -shared  -o $(OUT)  $(OBJECTS)  
	$(DEL_FILE) $(OBJECTS)
	$(COPY_FILE) $(OUT) ../../../Applications/fp_builder.console/FP_builder/

mkdir: 
	$(MKDIR) ./$(OBJECTS_DIR)

$(OBJECTS_DIR)%.o: %.cpp
	@echo $@
	@echo $<
	$(CXX) $(ARCH) $(PIC) $(CXXFLAGS) $(INCCXXPATH) -o $@ -c $<
